<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>
   <extension-point id="imageSupport" name="Image Support" schema="schema/imageSupport.exsd"/>
   <extension-point id="appnoteSupport" name="Appnote Support" schema="schema/appnoteSupport.exsd"/>
   <extension-point id="documentSupport" name="Document Support" schema="schema/documentSupport.exsd"/>
   <extension-point id="metadataSupport" name="Metadata Support" schema="schema/metadataSupport.exsd"/>
   <extension-point id="assetPathSupport" name="Asset Support" schema="schema/assetPathSupport.exsd"/>
   <extension-point id="categorySupport" name="Category Support" schema="schema/categorySupport.exsd"/>

   <extension
         point="com.silabs.ss.platform.content.core.documentSupport">
      <documentDetector
            class="com.silabs.ss.platform.internal.content.core.AemDocumentDetector">
      </documentDetector>
   </extension>
   
   <extension
         point="com.silabs.ss.platform.content.core.appnoteSupport">
      <appnoteDetector
            class="com.silabs.ss.platform.internal.content.core.AemAppNoteDetector">
      </appnoteDetector>
   </extension>
   
   <extension
         point="com.silabs.ss.platform.content.core.imageSupport">
      <imageDetector
            class="com.silabs.ss.platform.internal.content.core.AemImageDetector">
      </imageDetector>
   </extension>
   
   <extension
         point="com.silabs.ss.platform.content.core.metadataSupport">
      <metadataProvider
            class="com.silabs.ss.platform.internal.content.core.metadata.MetadataProvider"
            namespace="">
      </metadataProvider>
      <metadataDetector
            class="com.silabs.ss.platform.internal.content.core.metadata.MetadataDetector">
      </metadataDetector>
      
   </extension>
   
    <extension
         point="com.silabs.ss.platform.content.core.assetPathSupport">
      <assetPathProvider
            class="com.silabs.ss.platform.internal.content.core.assetpath.AssetPathProvider"
            namespace="">
      </assetPathProvider>
      <assetPathDetector
            class="com.silabs.ss.platform.internal.content.core.assetpath.AssetPathDetector">
      </assetPathDetector>
      
   </extension>

   <extension
         point="com.silabs.ss.platform.descriptor.core.propertySupport">
      <propertyGroup
            description="Content properties"
            label="Content"
            name="content">
         <includes
               group="core">
         </includes>
         <property
               description="An optional reference to a templates file containing project templates related to this content item."
               name="templatesFile"
               type="string">
         </property>
         <property
               description="An optional list of ids of project templates related to this content item."
               name="templateIds"
               type="stringList">
         </property>
         <property
               description="URI list of example paths"
               name="exampleFiles"
               type="uriList">
         </property>
         <property
               description="String of Contributing ID"
               name="contributingID"
               type="string">
         </property>
         <property
               description="The path to the metadata xml file."
               name="metadataFile"
               type="uri">
         </property>
      </propertyGroup>
   </extension>
   
   <extension
         point="com.silabs.ss.platform.descriptor.core.typeSupport">
      <listType
            description="List of asset URIs, space-separated"
            elementType="uri"
            name="asset">
      </listType>
      <typeConverter
            class="com.silabs.ss.platform.internal.descriptor.core.type.converter.StringListTypeConverter"
            id="asset">
      </typeConverter>
   </extension>
   
   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated ContentItem -->
      <package
            uri="http://www.silabs.com/ss/ContentItem.ecore"
            class="com.silabs.ss.platform.internal.api.content.core.item.model.ContentItemModelPackage"
            genModel="model/ContentItem.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.extension_parser">
      <!-- @generated ContentItem -->
      <parser
            type="contentItem"
            class="com.silabs.ss.platform.internal.content.core.item.model.util.ContentItemModelResourceFactoryImpl"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated Asset -->
      <package
            uri="http://www.silabs.com/ss/Asset.ecore"
            class="com.silabs.ss.platform.internal.content.core.asset.model.AssetModelPackage"
            genModel="model/Asset.genmodel"/>
   </extension>

   <extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="com.silabs.ss.platform.internal.content.core.asset.model.util.AssetModelResourceFactoryImpl"
            type="assets">
      </parser>
   </extension>
   <extension
         point="com.silabs.ss.platform.content.core.categorySupport">
      <categoryDetector
            class="com.silabs.ss.platform.internal.content.core.AemCategoryDetector">
      </categoryDetector>
   </extension>
   <extension
         point="com.silabs.ss.platform.security.core.rootCertificateLoader">
      <certLoader
            class="com.silabs.ss.platform.internal.content.core.AssetRootCertificateLoader">
      </certLoader>
   </extension>
</plugin>
