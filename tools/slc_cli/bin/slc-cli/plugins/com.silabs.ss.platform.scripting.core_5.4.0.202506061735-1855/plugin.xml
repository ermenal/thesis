<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>
   <extension-point id="scriptSupport" name="Script Support" schema="schema/scriptSupport.exsd"/>
   <extension-point id="internalScriptSupport" name="Internal Script Support" schema="schema/internalScriptSupport.exsd"/>
   <extension
         point="com.silabs.ss.platform.descriptor.core.propertySupport">
      <propertyGroup
            description="Script Support Properties"
            name="scriptSupport">
         <includes
               group="core">
         </includes>
         <property
               description="The class implementing IScript"
               name="class"
               type="class">
         </property>
         <property
               description="The list of file extensions handled by this script (e.g. &quot;.txt&quot;)"
               name="fileExtensions"
               type="stringList">
         </property>
         <property
               description="The list of shebang strings handled by this script (e.g. &quot;python3&quot;)"
               name="shebang"
               type="stringList">
         </property>
      </propertyGroup>
   </extension>
   
    <extension
         point="com.silabs.ss.platform.scripting.core.scriptSupport">
      <scriptModuleProvider name="core"
            class="com.silabs.ss.platform.internal.scripting.core.SLSCoreModuleProvider">
      </scriptModuleProvider>
      <scriptModuleProvider name="uri"
            class="com.silabs.ss.platform.internal.scripting.core.SLSUriModuleProvider">
      </scriptModuleProvider>
   </extension>
    <extension
          id="scriptServerApp"
          name="Script Server Application"
          point="org.eclipse.core.runtime.applications">
       <application
             cardinality="singleton-global"
             thread="main"
             visible="true">
          <run
                class="com.silabs.ss.platform.internal.scripting.core.server.ScriptServerApplication">
          </run>
       </application>
    </extension>
</plugin>
