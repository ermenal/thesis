<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="sdkSupport" name="SDK Support" schema="schema/sdkSupport.exsd"/>
   <extension-point id="protocolSupport" name="Protocol Support" schema="schema/protocolSupport.exsd"/>
   <extension
         point="com.silabs.ss.platform.descriptor.core.propertySupport">
      <propertyGroup
            description="Properties for SDKs"
            label="SDK Properties"
            name="sdk">
         <includes
               group="core">
         </includes>
         <includes
               group="hardware">
         </includes>
         <property
               description="Absolute path to templates file"
               name="templatesFile"
               type="pathList">
         </property>
         <property
               description="Absolute path to demos file"
               name="demosFile"
               type="pathList">
         </property>
         <property
               description="Absolute path to modules file"
               name="modulesFile"
               type="pathList">
         </property>
         <property
               description="Absolute path to category files"
               name="categoryFile"
               type="pathList">
         </property>
         <property
               description="Absolute path to appnotes file"
               name="appnotesFile"
               type="pathList">
         </property>
         <property
               description="Absolute path to docs file"
               name="docsFile"
               type="pathList">
         </property>
         <property
               description="URL to SDK documentation."
               name="docURL"
               type="uri">
         </property>
         <property
               description="Secondary label to show on the SDK"
               name="subLabel"
               type="stringList">
         </property>
         <property
               description="list of files that define sub properties"
               name="subPropertyFiles"
               type="stringList">
         </property>
         <property
               description="list of files that were auto-detected as protocols"
               name="extensionPropertyFiles"
               type="stringList">
         </property>
         <property
               description="List of protocol ids in this SDK"
               name="protocolIds"
               type="stringList">
         </property>
         <property
               description="The label with a version in it"
               name="labelWithVersion"
               type="string">
         </property>
         <property
               description="The simplified label with a version in it"
               name="simpleLabelWithVersion"
               type="string">
         </property>
         <property
               description="Required feature level specifies the compatibility with Studio"
               name="requiredFeatureLevel"
               type="string">
         </property>
         <property
               description="Module definition points to a yaml file specifying modules"
               name="moduleDefinition"
               type="pathList">
         </property>
         <property
               description="Flag that specifies that the SDK supports the module OPNs."
               name="supportModules"
               type="boolean">
         </property>
         <property
               description="Flag that specifies that the SDK supports SDK extensions."
               name="supportsExtensions"
               type="boolean">
         </property>
         <property
               description="Adapter pack search paths"
               name="adapterPacks"
               type="pathList">
         </property>
      </propertyGroup>
      <propertyGroup
            description="Core properties relating to SDKs"
            name="coreSdk">
         <property
               description="Option for any SDK provided descriptors to use"
               name="contributingSdk"
               type="string">
         </property>
         <includes
               group="protocol">
         </includes>
     </propertyGroup>
   
      <propertyGroup
            description="sdk extended core properties"
            name="core">
         <includes
               group="coreSdk">
         </includes>
      </propertyGroup>
      <propertyGroup
            description="Properties associated with protocols"
            name="protocol">
         <property
               description="Option for any Protocol provided descriptors to use"
               name="contributingProtocol"
               type="string">
         </property>
         <property
               description="String specifier for the protocol"
               name="protocolKey"
               type="string">
         </property>
         <property
               description="Required location for a protocol to be moved to when added to an SDK"
               name="requiredSdkLoc"
               type="string">
         </property>
         <property
               description="Optional folder containing Connectivity Firmware"
               name="connectivityFirmwareFolders"
               type="uriList">
         </property>
         <property
               description="Optional asset path containing Connectivity Firmware"
               name="connectivityFirmwareAssets"
               type="asset">
         </property>
      </propertyGroup>
   </extension>
   <extension
         point="com.silabs.ss.platform.sdk.core.sdkSupport">
      <sdkDescriptor
            description="This is an empty SDK for use when a project does not need one."
            id="com.silabs.sdk.none"
            label="None"
            version="0.0.0">
            <property key="core.autoEnable" value="true"></property>
            <property key="core.alwaysEnabled" value="true"></property>
      </sdkDescriptor>
      <sdkDetector
            class="com.silabs.ss.platform.internal.api.sdk.core.SDKDetector">
      </sdkDetector>
      <sdkProvider
            class="com.silabs.ss.platform.api.sdk.core.StockSDKProvider"
            namespace="com.silabs.sdk">
      </sdkProvider>
      <sdkDetector
            class="com.silabs.ss.platform.internal.api.sdk.core.DemosOnlySdkDetector">
      </sdkDetector>
   </extension>
   <extension
         point="com.silabs.ss.platform.scripting.core.scriptSupport">
      <scriptModuleProvider name="sdk"
            class="com.silabs.ss.platform.internal.sdk.core.scripting.SLSSDKModuleProvider">
      </scriptModuleProvider>
   </extension>
   <extension
         point="com.silabs.ss.platform.content.core.categorySupport">
      <categoryDetector
            class="com.silabs.ss.platform.internal.sdk.core.SDKCategoryDetector">
      </categoryDetector>
   </extension>

   <extension
         point="com.silabs.ss.platform.content.core.appnoteSupport">
      <appnoteDetector
            class="com.silabs.ss.platform.internal.sdk.core.SDKAppnoteDetector">
      </appnoteDetector>
   </extension>
   <extension
         point="com.silabs.ss.platform.content.core.documentSupport">
      <documentDetector
            class="com.silabs.ss.platform.internal.sdk.core.SDKDocumentDetector">
      </documentDetector>
   </extension>
   <extension
         point="com.silabs.java.utils.stockVariableSupport">
      <stockVariableFactory
            class="com.silabs.ss.platform.internal.sdk.core.SDKStockVariableFactory">
      </stockVariableFactory>
   </extension>
   <extension
         point="com.silabs.ss.platform.descriptor.core.hardwareProvider">
      <hardwareProvider
            class="com.silabs.ss.platform.internal.api.sdk.core.SDKHardwareHandler">
      </hardwareProvider>
   </extension>
   <extension
         point="com.silabs.ss.platform.sdk.core.protocolSupport">
      <protocolDetector
            class="com.silabs.ss.platform.internal.api.sdk.core.protocol.SDKProtocolDetector">
      </protocolDetector>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/rest/sdk/verifyinstalllocation"
            class="com.silabs.ss.platform.internal.sdk.core.SDKVerifyInstallLocationServlet">
      </servlet>
   </extension>
   <extension
         point="com.silabs.ss.platform.sdk.core.sdkSupport">
      <sdkDetector
            class="com.silabs.ss.platform.internal.api.sdk.core.SDKRepoDetector">
      </sdkDetector>
   </extension>
   

</plugin>
