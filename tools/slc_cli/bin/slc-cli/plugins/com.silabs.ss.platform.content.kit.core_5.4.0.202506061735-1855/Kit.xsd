<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<xsd:schema 
		xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore" 
		xmlns:model="http://www.silabs.com/ss/Studio.ecore" 
		xmlns:kits="http://www.silabs.com/ss/Kit.ecore" 
		xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
		ecore:nsPrefix="kits" 
		ecore:package="com.silabs.ss.platform.internal.content.kit.core.model" 
		targetNamespace="http://www.silabs.com/ss/Kit.ecore">

	<xsd:import namespace="http://www.eclipse.org/emf/2002/Ecore" schemaLocation="platform:/plugin/org.eclipse.emf.ecore/model/Ecore.xsd"/>
	<xsd:import namespace="http://www.silabs.com/ss/Studio.ecore" schemaLocation="../../com.silabs.ss.platform.content.core/model/Studio.xsd"/>

	<xsd:element name="slkits" type="kits:MSlkits"/>

	<xsd:complexType name="MSlkits">
		<xsd:sequence>
			<xsd:element type="xsd:date" name="updated-date"/>
			<xsd:element name="kits" type="kits:MKits"/>
		</xsd:sequence>
		<xsd:attribute type="xsd:float" name="version"/>
	</xsd:complexType>

	<xsd:complexType name="MKits">
		<xsd:sequence>
			<xsd:element name="kit" type="kits:MKit" maxOccurs="unbounded" minOccurs="0"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="MKit">
		<xsd:complexContent>
			<xsd:extension base="model:MDescriptor">
				<xsd:sequence>
					<xsd:element type="ecore:EString" name="opn"/>
					<xsd:element type="ecore:EString" name="kit-type"/>
					<xsd:element type="ecore:EString" name="note"/>
					<xsd:element name="boards">
						<xsd:complexType>
							<xsd:choice maxOccurs="unbounded" minOccurs="0">
								<xsd:element name="board">
									<xsd:complexType mixed="true">
										<xsd:sequence>
											<xsd:element type="ecore:EString" name="optional" minOccurs="0"/>
										</xsd:sequence>
										<xsd:attribute type="ecore:EString" name="pn" use="optional"/>
										<xsd:attribute type="ecore:EString" name="revision" use="optional"/>
										<xsd:attribute type="ecore:EString" name="variant" use="optional"/>
									</xsd:complexType>
								</xsd:element>
							</xsd:choice>
						</xsd:complexType>
					</xsd:element>
				</xsd:sequence>
				<xsd:attribute type="ecore:EString" name="pn" use="optional"/>
				<xsd:attribute type="ecore:EString" name="revision" use="optional"/>
				<xsd:attribute type="ecore:EString" name="variant" use="optional"/>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
</xsd:schema>
