<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xsd:schema xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore" xmlns:model="http://www.silabs.com/ss/Studio.ecore" xmlns:part="http://www.silabs.com/ss/Part.ecore" xmlns:xsd="http://www.w3.org/2001/XMLSchema" ecore:nsPrefix="part" ecore:package="com.silabs.ss.platform.internal.content.part.core.model" targetNamespace="http://www.silabs.com/ss/Part.ecore">
  <xsd:import namespace="http://www.eclipse.org/emf/2002/Ecore" schemaLocation="platform:/plugin/org.eclipse.emf.ecore/model/Ecore.xsd"/>
  <xsd:import namespace="http://www.silabs.com/ss/Studio.ecore" schemaLocation="Studio.xsd"/>
  <xsd:element ecore:ignore="true" name="MCollection" type="part:MCollection"/>
  <xsd:element ecore:ignore="true" name="MPartGroup" type="part:MPartGroup"/>
  <xsd:element ecore:ignore="true" name="MPart" type="part:MPart"/>
  <xsd:complexType name="MCollection">
    <xsd:attribute ecore:reference="part:MPartGroup" name="groups">
      <xsd:simpleType>
        <xsd:list itemType="xsd:anyURI"/>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>
  <xsd:complexType name="MPartGroup">
    <xsd:annotation>
      <xsd:documentation>Descriptor for a collection of parts that are mostly compatible with each other, but perhaps have different memory sizes, speeds, etc.

The top-level group is a "portfolio", a collection of groups of parts that all share the same architecture and tooling.</xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="model:MDescriptor">
        <xsd:sequence>
          <xsd:element ecore:resolveProxies="true" maxOccurs="unbounded" minOccurs="0" name="parts" type="part:MPart">
            <xsd:annotation>
              <xsd:documentation>The parts contained in this group.</xsd:documentation>
            </xsd:annotation>
          </xsd:element>
          <xsd:element ecore:resolveProxies="true" maxOccurs="unbounded" minOccurs="0" name="groups" type="part:MPartGroup">
            <xsd:annotation>
              <xsd:documentation>The groups contained in this group.</xsd:documentation>
            </xsd:annotation>
          </xsd:element>
        </xsd:sequence>
        <xsd:attribute name="parent" type="ecore:EString">
          <xsd:annotation>
            <xsd:documentation>The parent group of this group.  If not defined, and the eContainer is a Group, it is the parent.  Else, the receiver is a root.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <xsd:complexType name="MPart">
    <xsd:annotation>
      <xsd:documentation>Descriptor for a part.</xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="model:MDescriptor">
        <xsd:attribute name="parent" type="ecore:EString">
          <xsd:annotation>
            <xsd:documentation>The parent group of this group.  If not defined, and the eContainer is a Group, it is the parent.  Else, the receiver is a root.</xsd:documentation>
          </xsd:annotation>
        </xsd:attribute>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
</xsd:schema>
